<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Age Predictor</title>
  </head>
  <body>
    <div>
      <% if (age === null) { %>
      <h1>Enter your name below 👇🏽</h1>

      <form action="/" method="POST">
        <input type="text" name="nameInput" placeholder="First Name" />
        <br />
        <br />

        <label for="countries"
          >Select your country for the most accurate results:</label
        ><br />
        <select name="country" id="countries">
          <% for (const countryCode in countries) { %>
          <option value="" disabled selected hidden>Choose a country</option>
          <option value="<%= countryCode %>">
            <%= countries[countryCode] %>
          </option>
          <% }; %>
        </select>
        <br /><br />
        <button type="submit">Predict Age</button>
        <% } %>
      </form>

      <% if (age !== null) { %>
      <h1>Your Predicted Age is: <%= age %></h1>
      <form action="/" method="GET">
        <button type="submit">Try Again</button>
      </form>
      <% } %>
    </div>
  </body>
</html>
